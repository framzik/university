<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>University</display-name>

    <servlet>
        <servlet-name>professorServlet</servlet-name>
        <servlet-class>ru.university.web.ProfessorServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>professorServlet</servlet-name>
        <url-pattern>/professors</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>studentServlet</servlet-name>
    <servlet-class>ru.university.web.StudentServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
</servlet>
    <servlet-mapping>
        <servlet-name>studentServlet</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>courseServlet</servlet-name>
        <servlet-class>ru.university.web.UniCourseServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>courseServlet</servlet-name>
        <url-pattern>/courses</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>facultyServlet</servlet-name>
        <servlet-class>ru.university.web.FacultyServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>facultyServlet</servlet-name>
        <url-pattern>/faculties</url-pattern>
    </servlet-mapping>
</web-app>
